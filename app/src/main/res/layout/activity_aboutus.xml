<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bt.com.bombardiertransportation.Aboutus">


    <TextView
        android:id="@+id/developers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="41dp"
        android:text="Developers:"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/kripal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        app:srcCompat="@drawable/kripal"
        android:layout_below="@+id/developers"
        android:layout_alignLeft="@+id/chirag"
        android:layout_alignStart="@+id/chirag" />

    <ImageView
        android:id="@+id/chirag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chirag"
        android:layout_below="@+id/kripal"
        android:layout_alignLeft="@+id/developers"
        android:layout_alignStart="@+id/developers"
        android:layout_marginTop="66dp" />

    <TextView
        android:id="@+id/kripalname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/kripal"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/kripal"
        android:layout_toRightOf="@+id/kripal"
        android:text="Kripal Patel\nTCMS Test Engineer\n\nVedant Platina Atladra,Vadodara" />

    <TextView
        android:id="@+id/chiragname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kripalname"
        android:layout_alignStart="@+id/kripalname"
        android:layout_alignTop="@+id/chirag"
        android:layout_marginTop="51dp"
        android:text="Chirag Khangani\nTCMS Test Engineer\n\nVedant Platina Atladra,Vadodara" />

</RelativeLayout>
